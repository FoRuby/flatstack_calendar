$('.edit-event-errors')
  .html("<%= j render 'shared/errors', resource: @recurring_event %>");
<% if @recurring_event.errors.blank? %>
  $('.flash-messages').html("<%= j render 'shared/messages' %>");
  $('#calendar').fullCalendar('removeEvents', [<%= @recurring_event.id %>]);
  $('#calendar').fullCalendar(
    'renderEvents',
    $.parseJSON("<%= j raw(render(@recurring_event, format: :json)) %>"),
    true
  );
  $('.show-event-modal').modal('hide');
<% end %>
