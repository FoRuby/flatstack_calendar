/         = f.label :duration
/         = f.number_field :duration, min: 1, class: 'form-control', required: true
/
/     .row
/       .col.form-group
/         = f.label :color
/         = f.color_field :color, class: 'form-control'
/
/       .col.form-group
/         = f.label :visibility
/         = f.select(:visibility, options_for_select(Event::EVENT_TYPES), {}, class: 'text-center form-control form-control-lg')
/
/
/
/     .row
/       .col.form-group
/         = f.date_field :recurring_start_date, class: 'form-control', required: true
/
/       .col.form-group
/         = f.date_field :recurring_end_date, class: 'form-control'
/
/   .modal-footer
/     = link_to 'Cancel', '#', class: 'button btn btn-primary cancel-event-button'
/     = f.submit class: 'button btn btn-primary'
